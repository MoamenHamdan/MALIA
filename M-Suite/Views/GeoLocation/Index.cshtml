@model IEnumerable<M_Suite.Models.GeoLocation>

@{
    ViewData["Title"] = "Index";
}

<h1>Geo Locations</h1>

<p>
    <a asp-action="Create">Create New Geo Location</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Code
            </th>
            <th>
                Geo Location ID
            </th>
            <th>
                Level
            </th>
            <th>
                Code
            </th>
            <th>
                Description (Language 1)
            </th>
            <th>
                Description (Language 2)
            </th>
            <th>
                Description (Language 3)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GlCdIdGeo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GlGlId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GlLevel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GlCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GlDescriptionLan1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GlDescriptionLan2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GlDescriptionLan3)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GlId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.GlId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.GlId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<style>

    /* Style the action row */
    .table tr td:last-child {
        background-color: #f8f9fa; /* Light gray background */
        text-align: center;
    }

        /* Style the action links with smaller size */
        .table tr td:last-child a {
            padding: 3px 7px;
            border-radius: 5px;
            color: white;
            font-weight: bold;
            font-size: 0.85rem;
            display: inline-block;
            margin: 2px;
        }

            .table tr td:last-child a[href*='Edit'] {
                background-color: #ffc107; /* Yellow */
            }

            .table tr td:last-child a[href*='Details'] {
                background-color: #17a2b8; /* Blue */
            }

            .table tr td:last-child a[href*='Delete'] {
                background-color: #dc3545; /* Red */
            }

            .table tr td:last-child a:hover {
                opacity: 0.8;
            }

    /* Table Styling */
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

        .table th, .table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            transition: background-color 0.3s ease;
        }

        /* Table Header */
        .table th {
            background-color: #004085;
            color: #ffffff;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* Alternate row colors */
        .table tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        /* Hover effect */
        .table tr:hover {
            background-color: #e2e6ea;
        }

    /* Link Styling */
    a {
        color: #004085;
        font-weight: 600;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        a:hover {
            color: #002752;
            text-decoration: underline;
        }

    /* Button-like Links */
    .action-links a {
        display: inline-block;
        margin: 5px;
        padding: 6px 12px;
        border-radius: 5px;
        background-color: #007bff;
        color: white;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .action-links a:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }
</style>